<!-- from: https://billts.site/js/gitment.js -->

<div id="gitment-ctn" style="margin: 50px"></div>
<link rel="stylesheet" href="<%-config.root%>css/extra_css/gitment.css">
<script src="<%-config.root%>js/gitment.js"></script>

<script>
var gitment = new Gitment({
  id: "<%= page.title %>",
  owner: '<%=theme.gitment_owner%>',
  repo: '<%=theme.gitment_repo%>',
  oauth: {
    client_id: '<%=theme.gitment_oauth.client_id%>',
    client_secret: '<%=theme.gitment_oauth.client_secret%>',
  },
})
gitment.render('gitment-ctn')
</script>
<!-- Gitment代码结束 -->